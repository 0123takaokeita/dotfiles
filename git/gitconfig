[init]
	defaultBranch = master
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[user]
  name = TakaoKeita
  email = keita.takao.1112@gmail.com
[core]
  pager = LESSCHARSET=utf-8 less
  quotepath = false
  editor = nvim
[commit]
	verbose = true
[rebase]
  autostash = true
  autosquash = true
[merge]
	conflictStyle = diff3
[ghq]
	root = ~/dev
[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = green 
  changed = yellow
  untracked = cyan
[alias]
  br = branch
  bra = branch -a
  co = checkout
  ci = commit -m
  ca = commit --ammend -m
  st = status -s
  cp = cherry-pick
  l = log --oneline
  lg = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
  undo = reset --soft HEAD^
  bra = branch -a
  fe = fetch
  ad = add
  d = diff
  p = push
[fetch]
	prune = true ; remoteブランチが削除されていた場合、ローカルブランチも削除する
[pull]
  ff = only ; pull時にfast-forwardのみを許可する
